@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div id="sign_in_container">
    <div id="sign_in_p_container">
        <p id="sign_in_p">Enter your email<br>to sign in</p>
    </div>
    <div id="sign_in_container_child"></div>
        <div id="sign_in_box">
            <div id="sign_in_box_child">
                <h1 class="text-primary text-center pt-2" id="sign_in_title">Sign In</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger no-bullets" id="full_register_validation_summary_div"></div>
                <form method="post" asp-controller="Account" asp-action="SignIn" id="sign_in_form" asp-route-returnurl="@ViewData["ReturnUrl"]">

                    <div class="sign_in_input_spacer_div">
                        <label asp-for="Email" class="col-12"></label>
                        <input asp-for="Email" class="sign_in_input">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="sign_in_input_spacer_div">
                        <label asp-for="Password" class="col-12"></label>
                        <input asp-for="Password" class="sign_in_input">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group pt-2" id="remember_me_check_box">
                        <div class="col-md-12">
                            <div class="custom-checkbox">
                                <label id="remember_me_label">
                                    <input asp-for="RememberMe" />
                                    <p>Remember me</p>
                                </label>
                            </div>
                        </div>
                    </div>  

                    <div id="button_and_forgot_password_id">
                        <button id="send_sign_in_btn" type="submit">Continue</button> 
                        <div id="sign_in_external_links_div">
                            <a asp-controller="Account" asp-action="ForgotPassword" id="forgot_your_password_text">Forgot your password?</a>
                            <a asp-controller="Account" asp-action="FullRegister" id="sign_in_register_text" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as new user</a>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}


